{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "favoriteTeamIds": { "type": "array", "items": { "type": "string" } },
        "favoriteCompetitionIds": { "type": "array", "items": { "type": "string" } },
        "favoriteMatchIds": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "email", "displayName"]
    },
    "Match": {
      "title": "Match",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "competitionId": { "type": "string" },
        "homeTeamId": { "type": "string" },
        "awayTeamId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "status": { "type": "string" },
        "score": { "type": "string" }
      },
      "required": ["id", "competitionId", "homeTeamId", "awayTeamId", "date", "status", "score"]
    },
    "Competition": {
      "title": "Competition",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "continent": { "type": "string" },
        "apiFootballId": { "type": "number" }
      },
      "required": ["id", "name", "continent", "apiFootballId"]
    },
    "Team": {
      "title": "Team",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "originalId": { "type": "number" },
        "customNameByAdmin": { "type": "string" }
      },
      "required": ["id", "name", "originalId"]
    },
    "News": {
      "title": "News",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "body": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "authorId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "body", "imageUrl", "authorId", "createdAt"]
    },
    "Admin": {
      "title": "Admin",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "permissions": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "permissions"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile information."
    },
    "/matches/{matchId}": {
      "schema": { "$ref": "#/entities/Match" },
      "description": "Stores individual match data."
    },
    "/competitions/{competitionId}": {
      "schema": { "$ref": "#/entities/Competition" },
      "description": "Stores data for each competition."
    },
    "/teams/{teamId}": {
      "schema": { "$ref": "#/entities/Team" },
      "description": "Stores team information."
    },
    "/news/{newsId}": {
      "schema": { "$ref": "#/entities/News" },
      "description": "Stores news articles."
    },
    "/admins/{adminId}": {
      "schema": { "$ref": "#/entities/Admin" },
      "description": "Defines users with administrative privileges."
    }
  }
}
