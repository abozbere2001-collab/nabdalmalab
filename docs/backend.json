{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "favoriteTeamIds": { "type": "array", "items": { "type": "string" } },
        "favoriteCompetitionIds": { "type": "array", "items": { "type": "string" } },
        "favoriteMatchIds": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "email", "displayName"]
    },
    "Match": {
      "title": "Match",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "competitionId": { "type": "string" },
        "homeTeamId": { "type": "string" },
        "awayTeamId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "status": { "type": "string" },
        "score": { "type": "string" }
      },
      "required": ["id", "competitionId", "homeTeamId", "awayTeamId", "date", "status", "score"]
    },
    "Competition": {
      "title": "Competition",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "continent": { "type": "string" },
        "apiFootballId": { "type": "number" }
      },
      "required": ["id", "name", "continent", "apiFootballId"]
    },
    "Team": {
      "title": "Team",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "originalId": { "type": "number" },
        "customNameByAdmin": { "type": "string" }
      },
      "required": ["id", "name", "originalId"]
    },
    "News": {
      "title": "News",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "body": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "authorId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "body", "imageUrl", "authorId", "createdAt"]
    },
    "Admin": {
      "title": "Admin",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "permissions": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "permissions"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      { "path": "/users/{userId}", "definition": { "entityName": "User", "schema": { "$ref": "#/backend/entities/User" } } },
      { "path": "/matches/{matchId}", "definition": { "entityName": "Match", "schema": { "$ref": "#/backend/entities/Match" } } },
      { "path": "/competitions/{competitionId}", "definition": { "entityName": "Competition", "schema": { "$ref": "#/backend/entities/Competition" } } },
      { "path": "/teams/{teamId}", "definition": { "entityName": "Team", "schema": { "$ref": "#/backend/entities/Team" } } },
      { "path": "/news/{newsId}", "definition": { "entityName": "News", "schema": { "$ref": "#/backend/entities/News" } } },
      { "path": "/admins/{adminId}", "definition": { "entityName": "Admin", "schema": { "$ref": "#/backend/entities/Admin" } } }
    ]
  }
}
